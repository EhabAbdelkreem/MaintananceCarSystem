@model serenity_carsystem.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your serenity_carsystem account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on serenity_carsystem with your e-mail address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>

    Thanks,
    The "serenity_carsystem" Team
</body>
</html>